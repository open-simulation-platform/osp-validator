      <xs:element type="osp:LinearMechanicalPortType" name="LinearMechanicalPort" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element type="osp:AngularMechanicalPortType" name="AngularMechanicalPort" minOccurs="0"
