      <xs:element type="osp:HydraulicPortType" name="HydraulicPort" minOccurs="0" maxOccurs="unbounded"/>

      <xs:element type="osp:LinearMechanicalQuasiPortType" name="LinearMechanicalQuasiPort" minOccurs="0"
